<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_main_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.autotestlab.gridactivity.QK_AutoTestLab_Phone.PhoneMainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:text="     拨打号码"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/textView5"
            android:layout_weight="0.29" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/_phoneEdit"
            android:layout_weight="0.24"
            android:hint="电话号码"
            android:gravity="center_vertical|center"
            android:text="10086" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:text="     拨打次数"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/textView1"
            android:layout_weight="0.29" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/_timeEditphone"
            android:layout_weight="0.24"
            android:hint="拨打次数"
            android:gravity="center_vertical|center"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2Phone"
            android:layout_weight="0.07" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/_resultPhone"
            android:layout_weight="0.80"
            android:textAlignment="center" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_progressBarPhone"
            android:layout_weight="0.09" />

        <Button
            android:text="开始"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_phoneStart"
            android:elevation="0dp" />

        <Button
            android:text="停止"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_phoneStop" />

    </LinearLayout>


</LinearLayout>
